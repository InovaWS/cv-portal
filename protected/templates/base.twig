	<div id="main-content">
		<div class="container">
			
			<div class="row">
				<div class="span3">
					<div id="lateral">
						{% if usuario_logado is defined %}
						{% block lateral %}{% endblock %}
						{% else %}
						<h4>Cadastre-se, é <strong>gratuito</strong></h4>
						<form action="{{ url('/cadastro') }}" method="post" class="form-vertical">
							<div class="row-fluid">
								<div class="control-group">
									<label class="control-label" for="box-cadastro-nome">Nome</label>
									<div class="controls controls-row">
										<input type="text" id="box-cadastro-nome" name="nome" class="span12">
									</div>
								</div>
								
								<div class="control-group">
									<label class="control-label" for="box-cadastro-email">E-mail</label>
									<div class="controls controls-row">
										<input type="email" id="box-cadastro-email" name="email" class="span12">
									</div>
								</div>
		
								<div class="control-group">
									<label class="control-label" for="box-cadastro-senha">Senha</label>
									<div class="controls">
										<input type="password" id="box-cadastro-senha" name="senha" class="span12">
									</div>
								</div>
		
								<div class="control-group">
									<label class="control-label" for="box-cadastro-confirmar-senha">Confirmar senha</label>
									<div class="controls">
										<input type="password" id="box-cadastro-confirmar-senha" name="confirmar-senha" class="span12">
									</div>
								</div>
		
								<div class="control-group">
									<div class="controls clearfix">
										<button type="submit" class="btn pull-right">Cadastrar</button>
									</div>
								</div>
							</div>
						</form>
						{% endif %}
					</div>
				</div>
				<div class="span9">
					{% block centro %}{% endblock %}
				</div>
			</div>
			
