<form action="{{ url('/busca') }}" method="get">
	<div class="row-fluid">
		<div class="span4">
			<div class="control-group">
				<label class="control-label">Marca</label>
				<div class="controls">
					<select class="span12 has-placeholder" name="marca">
						<option value="">Selecione</option>
					</select>
				</div>
			</div>
		</div>
		<div class="span4">
			<div class="control-group">
				<label class="control-label">Ve√≠culo</label>
				<div class="controls">
					<input type="text" name="veiculo" class="span12" />
				</div>
			</div>
		</div>
		<div class="span4">
			<div class="control-group">
				<label class="control-label">Ano</label>
				<div class="controls">
					<select class="span12 has-placeholder" name="ano">
						<option value="">Selecione</option>
						{% for ano in range('now' | date('Y'), 1960) %}
						<option value="{{ ano }}">{{ ano }}</option>
						{% endfor %}
					</select>
				</div>
			</div>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span4">
			<div class="control-group">
				<label class="control-label">Estado</label>
				<div class="controls">
					<select class="span12 has-placeholder" name="ano">
						<option value="">Selecione</option>
						{% for ano in range('now' | date('Y'), 1960) %}
						<option value="{{ ano }}">{{ ano }}</option>
						{% endfor %}
					</select>
				</div>
			</div>
		</div>
		<div class="span4">
			<div class="control-group">
				<label class="control-label">Cidade</label>
				<div class="controls">
					<select class="span12 has-placeholder" name="ano">
						<option value="">Selecione</option>
						{% for ano in range('now'	| date('Y'), 1960) %}
						<option value="{{ ano }}">{{ ano }}</option>
						{% endfor %}
					</select>
				</div>
			</div>
		</div>
		<div class="span4">
			<button type="submit" class="btn">Buscar</button>
			<input type="checkbox"> Apenas lojas
		</div>
	</div>
</form>