{% extends 'base.twig' %}

{% set pagina = {
	css_route: 'home'
} %}

{% block conteudo %}
<div class="row">
	<div class="span4">
		<div class="lateral">
			{% if usuario_logado is defined %}
			{# TODO #}
			{% else %}
			<h4>Cadastre-se, é <strong>gratuito</strong></h4>
			<form action="{{ url('/cadastro') }}" method="post" class="form-vertical">
				<div class="row-fluid">
					<div class="control-group">
						<label class="control-label" for="box-cadastro-nome">Nome</label>
						<div class="controls controls-row">
							<input type="text" id="box-cadastro-nome" name="nome" class="span12">
						</div>
					</div>
					
					<div class="control-group">
						<label class="control-label" for="box-cadastro-email">E-mail</label>
						<div class="controls controls-row">
							<input type="email" id="box-cadastro-email" name="email" class="span12">
						</div>
					</div>
	
					<div class="control-group">
						<label class="control-label" for="box-cadastro-senha">Senha</label>
						<div class="controls">
							<input type="password" id="box-cadastro-senha" name="senha" class="span12">
						</div>
					</div>
	
					<div class="control-group">
						<label class="control-label" for="box-cadastro-confirmar-senha">Confirmar senha</label>
						<div class="controls">
							<input type="password" id="box-cadastro-confirmar-senha" name="confirmar-senha" class="span12">
						</div>
					</div>
	
					<div class="control-group">
						<div class="controls clearfix">
							<button type="submit" class="btn pull-right">Cadastrar</button>
						</div>
					</div>
				</div>
			</form>
			{% endif %}
		</div>
	</div>
	<div class="span8">
		<div class="central">
			<ul class="nav nav-tabs">
				{% for tipo_de_veiculo in tipos_de_veiculos %}
				<li{% if loop.first %} class="active"{% endif %}>
					<a href="#busca-{{ tipo_de_veiculo.id }}" data-toggle="tab">{{ tipo_de_veiculo.descricao }}</a>
				</li>
				{% endfor %}
			</ul>
				
			<div class="tab-content">
				{% for tipo_de_veiculo in tipos_de_veiculos %}
				<div class="tab-pane{% if loop.first %} active{% endif %}" id="busca-carros">
					<form action="{{ url('/busca') }}" method="get">
						<div class="row-fluid">
							<div class="span4">
								<div class="control-group">
									<label class="control-label">Marca</label>
									<div class="controls">
										<select class="span12 has-placeholder" name="marca">
											<option value="">Selecione</option>
										</select>
									</div>
								</div>
							</div>
							<div class="span4">
								<div class="control-group">
									<label class="control-label">Veículo</label>
									<div class="controls">
										<input type="text" name="veiculo" class="span12" />
									</div>
								</div>
							</div>
							<div class="span4">
								<div class="control-group">
									<label class="control-label">Ano</label>
									<div class="controls">
										<select class="span12 has-placeholder" name="ano">
											<option value="">Selecione</option>
											{% for ano in range('now' | date('Y'), 1960) %}
											<option value="{{ ano }}">{{ ano }}</option>
											{% endfor %}
										</select>
									</div>
								</div>
							</div>
						</div>

						<div class="row-fluid">
							<div class="span4">
								<div class="control-group">
									<label class="control-label">Estado</label>
									<div class="controls">
										<select class="span12 has-placeholder" name="ano">
											<option value="">Selecione</option>
											{% for ano in range('now' | date('Y'), 1960) %}
											<option value="{{ ano }}">{{ ano }}</option>
											{% endfor %}
										</select>
									</div>
								</div>
							</div>
							<div class="span4">
								<div class="control-group">
									<label class="control-label">Cidade</label>
									<div class="controls">
										<select class="span12 has-placeholder" name="ano">
											<option value="">Selecione</option>
											{% for ano in range('now'	| date('Y'), 1960) %}
											<option value="{{ ano }}">{{ ano }}</option>
											{% endfor %}
										</select>
									</div>
								</div>
							</div>
							<div class="span4">
								<button type="submit" class="btn">Buscar</button>
								<input type="checkbox"> Apenas lojas
							</div>
						</div>
					</form>
				</div>
				{% endfor %}
			</div>
			
			<div class="row-fluid">
				<div class="span12">
					<a href="anuncie" title="Anuncie">
						<img src="{{ url('/img/banner.jpg') }}" alt="banner" style="width: 100%" />
					</a>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="downside">
</div>
{% endblock %}