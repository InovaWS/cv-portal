<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
	<!--[if lt IE 9]>
	{#}<script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>{#}
	<![endif]-->
	
	{% if pagina.titulo is defined %}
	<title>{{ pagina.titulo }} &ndash; Portal Central do Veículo</title>
	{% else %}
	<title>Portal Central do Veículo</title>
	{% endif %}
	
	{% if pagina.descricao is defined %}
	<meta name="description" content="{{ pagina.descricao }}">
	{% endif %}
	
	{#}<link href="http://fonts.googleapis.com/css?family=Oxygen:400,700" rel="stylesheet" type="text/css">{#}
	<link href="{{ url('/vendor/bootstrap/css/bootstrap.css') }}" rel="stylesheet" type="text/css" charset="utf-8">
	<link href="{{ url('/vendor/bootstrap/css/bootstrap-responsive.css') }}" rel="stylesheet" type="text/css" charset="utf-8">
	<link href="{{ url('/vendor/jquery-ui/jquery-ui-1.8.18.custom.css') }}" rel="stylesheet" type="text/css" charset="utf-8">
	<link href="{{ url('/vendor/prettyGallery/prettyGallery.css') }}" rel="stylesheet" type="text/css" charset="utf-8">
	<link href="{{ url('/css/portal.css') }}" rel="stylesheet" type="text/css" charset="utf-8">
</head>

<body id="main-body">
	<div id="body-wrapper">
		<header id="main-header">
			<div class="logo-and-menu-row">
				<div class="container">
					<h1 class="logo-place">
						<a id="logo" href="{{ url('/') }}" title="Ir para a página inicial">Central do Veículo</a>
					</h1>
					
					<div id="navbar">
						<div class="links pull-left">
							<ul>
								<li><a href="{{ url('/') }}" title="Ir para a página inicial">Home</a></li>
								<li><a href="{{ url('/noticias') }}" title="Ver as notícias">Notícias</a></li>
								<li><a href="{{ url('/anuncie') }}" title="Veja os motivos para anunciar conosco">Anuncie</a></li>
								{% if usuario_logado %}
								<li><a href="{{ url('/logout') }}" title="Encerrar a sua sessão de login">Sair</a></li>
								{% else %}
								<li><a href="{{ url('/login') }}" title="Entre no nosso sistema para anunciar">Entrar</a></li>
								{% endif %}
							</ul>
						</div>
						
						<div class="social-media pull-right">
							<span class="text">Estamos também aqui:</span>
							<a href="http://facebook.com/portalcv" title="Página da Central do Veículo no Facebook" target="_blank"><img src="{{ url('/img/redes/facebook-icon.png') }}" alt="Facebook"></a>
							<a href="http://twitter.com/portalcv" title="Perfil da Central do Veículo no Twitter" target="_blank"><img src="{{ url('/img/redes/twitter-icon.png') }}" alt="Twitter"></a>
						</div>
					</div>
				</div>
			</div>
			
			<div class="second-row">
				
			</div>
		</header>
		
		<div id="main-content">
			<div{% if pagina.css_route is defined %} id="{{ pagina.css_route }}"{% endif %} class="container">
				{% block conteudo %}{% endblock %}
			</div>
		</div>
	</div>
	
	<footer id="main-footer">
		<div class="container">
			<div class="row-fluid">
				<div class="span4">
					<ul class="footer-menu">
						<li><a href="{{ url('/') }}">Home</a></li>
						<li><a href="#">Notícias</a></li>
						<li><a href="#">Anuncie</a></li>
						<li><a href="#">Entrar</a></li>
						<li><a href="#">Facebook</a></li>
						<li><a href="#">Twitter</a></li>
						<li><a href="#">Google+</a></li>
					</ul>
				</div>
				
				<div class="span8">
					<div class="footer-noticias">
						<h4>Últimas notícias</h4>
						
						<div class="row-fluid">
							<div class="span6">
								<ul>
									{% for i in range(1, 4) %}
									<li>
										<img data-src="//placehold.it/32x32" class="imagem">
										<a href="#">Título da notícia aqui, resumido.</a>
									</li>
									{% endfor %}
								</ul>
								
								
							</div>
							
							<div class="span6">
								<ul>
									{% for i in range(1, 4) %}
									<li>
										<img data-src="//placehold.it/32x32" class="imagem">
										<a href="#">Título da notícia aqui, resumido</a>
									</li>
									{% endfor %}
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		
		<div class="footer-copyright">
			<div class="container">
				<div class="clearfix">
					<div class="pull-left">Copyright © 2013 Central do Veículo. Todos os direitos reservados.</div>
					<div class="pull-right">
						Portal
						<a href="http://www.centraldoveiculo.com.br/" title="Central do Veículo">centraldoveiculo.com.br</a> &mdash;
						Um produto
						<a href="http://www.inovaws.com.br/" title="Inova Websites" target="_blank">inovaws.com.br</a>
					</div>
				</div>
			</div>
		</div>
	</footer>
	
	<script src="{{ url('/vendor/modernizr-2.6.2.min.js') }}"></script>
	<script src="{{ url('/vendor/jquery-1.9.1.min.js') }}"></script>
	<script src="{{ url('/vendor/bootstrap/js/bootstrap.js') }}"></script>
	<script src="{{ url('/vendor/jquery-ui/jquery-ui-1.10.0.custom.min.js') }}"></script>
	<script src="{{ url('/vendor/jquery.maskedinput-1.2.2.js') }}"></script>
	<script src="{{ url('/vendor/prettyGallery/jquery.prettyGallery.js') }}"></script>
	<script src="{{ url('/js/plugins.js') }}"></script>
	<script src="{{ url('/js/routes.js') }}"></script>
	<script src="{{ url('/js/main.js') }}"></script>
	<script src="{{ url('/js/portal.js') }}"></script>
