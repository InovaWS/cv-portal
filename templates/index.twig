{% block scripts %}
<script>
$(function() {
	var $form = $('#box-cadastro form');
	var $nome = $form.find('input[name="nome"]');
	var $email = $form.find('input[name="email"]');
	var $senha = $form.find('input[name="senha"]');
	var $confirmarSenha = $form.find('input[name="confirmar-senha"]');

	var onChange = function() {
		$(this).closest('.control-group').removeClass('error');
	};
	
	$nome.on('keydown paste input change', onChange);
	$email.on('keydown paste input change', onChange);
	$senha.on('keydown paste input change', onChange);
	$confirmarSenha.on('keydown paste input change', onChange);

	$form.on('submit', function(event) {
		var form_valido = true;

		if (!($nome.val().length > 0)) {
			form_valido = false;
			$nome.closest('.control-group').addClass('error');
		}
		if (!($email.val().length > 0) || /^[a-zA-Z0-9\._-]+@[a-zA-Z0-9\._-]+$/.test($email.val())) {
			form_valido = false;
			$email.closest('.control-group').addClass('error');
		}
		if (!($senha.val().length > 0 || $confirmarSenha.val().length > 0 && $senha.val() == $confirmarSenha.val())) {
			form_valido = false;
			$senha.closest('.control-group').addClass('error');
			$confirmarSenha.closest('.control-group').addClass('error');
		}

		if (!form_valido)
			return event.preventDefault();
	});

	$('.has-placeholder').on('keyup change', function() {
		 $(this)[($(this).val() == '') ? 'addClass' : 'removeClass']('empty');
	});
	$('.has-placeholder').trigger('change');
});
</script>
{% endblock %}